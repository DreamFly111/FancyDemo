<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/bind_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/password_selected"
        android:drawablePadding="10dp"
        android:hint="请输入App号码"
        android:textSize="25sp"
        android:singleLine="true"
        android:textColor="@color/meTextColor"
        android:textColorHint="@color/meTextColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/meTextColor" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:gravity="left"
        android:text="请认真填写App验证码"
        android:textSize="25sp"
        android:textColor="@color/meTextColor"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/bind_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/button_blue"
        android:gravity="center"
        android:text="填写验证码"
        android:singleLine="true"
        android:textSize="25sp"
        android:textColor="@color/meWhite"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/scan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_blue"
        android:gravity="center"
        android:text="扫描借阅码"
        android:textSize="25sp"
        android:textColor="@color/meWhite"
        android:textStyle="bold" />

</LinearLayout>
